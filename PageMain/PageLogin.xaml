<Page x:Class="WPF_29._10_Cherednichenko_ISRPO12.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_29._10_Cherednichenko_ISRPO12.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="введите логин" Style="{StaticResource Label}"/>
            <TextBox x:Name="txbLogin"  Text=" " Style="{StaticResource TextBox}"/>
            <Label Content="введите пароль" Style="{StaticResource Label}"/>
            <PasswordBox x:Name="psbPassword" Style="{StaticResource PasswordBox}"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Регистрация" Style="{StaticResource ButtonY}"/>
                <Button x:Name="btnIn" Content="Войти" Style="{StaticResource ButtonG}" Click="btnIn_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
