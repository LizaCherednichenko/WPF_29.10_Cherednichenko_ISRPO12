<Page x:Class="WPF_29._10_Cherednichenko_ISRPO12.PageStudent.PageAccountStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_29._10_Cherednichenko_ISRPO12.PageStudent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Аккаунт студента">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Имя студента" Style="{StaticResource Title2}"/>
                <TextBlock Text="Имя" x:Name="tbName" Style="{StaticResource Title2}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин студента" Style="{StaticResource Title2}"/>
                <TextBlock Text="Логин"  x:Name="tbLog" Style="{StaticResource Title2}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
